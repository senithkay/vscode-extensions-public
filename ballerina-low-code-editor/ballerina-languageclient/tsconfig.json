{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": false,
    "module": "CommonJS",
    "target": "es2015",
    "jsx": "react",
    "outDir": "lib",
    "rootDir": "./src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts",
    "**/__tests__/*"
  ]
}
