{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ballerina Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/workspaces/ballerina-extension"
            ],
            "env": {
                "LS_EXTENSIONS_PATH": "",
                "LSDEBUG": "false",
                "WEB_VIEW_WATCH_MODE": "false",
                "WEB_VIEW_DEV_HOST": "http://localhost:9000",
                "BALLERINA_STAGE_CENTRAL": "false"
            },
            "outFiles": [
                "${workspaceFolder}/workspaces/ballerina-extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Ballerina Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "LS_EXTENSIONS_PATH": "",
                "LSDEBUG": "false",
                "WEB_VIEW_WATCH_MODE": "false"
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/workspaces/ballerina-extension",
                "--extensionTestsPath=${workspaceFolder}/workspaces/ballerina-extension/out/test"
            ],
            "outFiles": [
                "${workspaceFolder}/workspaces/ballerina-extension/out/test/**/*.js"
            ]
        },
        {
            "name": "Choreo Extension",
            "type": "extensionHost",
            "request": "launch",
            "env": {
                "WEB_VIEW_DEV_MODE": "true",
                "WEB_VIEW_DEV_HOST": "http://localhost:3000/static/js/bundle.js"
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/workspaces/choreo-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/workspaces/choreo-extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: watch-choreo"
        },
        {
            "name": "Debug Ballerina UI Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/workspaces/ballerina-extension/node_modules/vscode-extension-tester/out/cli.js",
            "args": [
                "run-tests",
                "${workspaceFolder}/workspaces/ballerina-extension/out/ui-test/*.js",
                "--mocha_config",
                "${workspaceFolder}/workspaces/ballerina-extension/ui-test/.mocharc.js",
                "-o",
                "${workspaceFolder}/workspaces/ballerina-extension/ui-test/settings.json"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "compile:ballerina-tests",
            "env": {
                "WEB_VIEW_WATCH_MODE": "false",
                "WEB_VIEW_DEV_HOST": "http://localhost:9000"
            }
        },
        {
            "name": "Debug Choreo UI Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/workspaces/choreo-extension/node_modules/vscode-extension-tester/out/cli.js",
            "args": [
                "run-tests",
                "${workspaceFolder}/workspaces/choreo-extension/dist/src/tests/e2e-tests/*.js",
                "--mocha_config",
                "${workspaceFolder}/workspaces/choreo-extension/src/tests/e2e-tests/.mocharc.js",
                "-o",
                "${workspaceFolder}/workspaces/choreo-extension/src/tests/e2e-tests/settings.json"
            ],
            "envFile": "${workspaceFolder}/workspaces/choreo-extension/.env",
            "env": {
                "WEB_VIEW_DEV_MODE": "true",
				"WEB_VIEW_DEV_HOST": "http://localhost:3000/main.js",
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "compile:choreo-tests"
        },
        {
			"name": "Debug Choreo Playwright-E2E Tests",
			"type": "node",
			"program": "${workspaceFolder}/workspaces/choreo-extension/node_modules/mocha/bin/_mocha",
			"args": [
                "--config",
                "${workspaceFolder}/workspaces/choreo-extension/src/tests/e2e-playwright/.mocharc.js",
				"${workspaceFolder}/workspaces/choreo-extension/dist/tests/e2e-playwright/suite/**/*.test.js"
			],
			"request": "launch",
			"outFiles": [
				"${workspaceFolder}/workspaces/choreo-extension/dist/**/*.js"
			],
			"console": "integratedTerminal",
			"preLaunchTask": "compile:choreo-tests"
		}
    ]
}
