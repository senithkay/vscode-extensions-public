{
  "name": "@wso2-enterprise/ballerina-configurable-editor",
  "version": "0.9.5",
  "description": "Ballerina Configurable Editor",
  "files": [
    "build"
  ],
  "main": "build/esm/index.js",
  "types": "build/esm/index.d.ts",
  "typings": "build/esm/index",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "npm run build:webpack && tsc --pretty && npm run copy:assets",
    "build:tsc": "tsc --pretty && npm run copy:assets",
    "build:webpack": "webpack --config webpack.config.js --mode=production",
    "copy:assets": "copyfiles -u 1 src/**/*.scss src/**/*.svg src/**/*.css src/**/*.png src/**/*.txt src/**/*.json build/esm",
    "watch": "npm run watch:webpack",
    "watch:tsc": "tsc --pretty --watch",
    "watch:webpack": "webpack-dev-server --mode=development --progress",
    "clean": "rimraf build/",
    "clean:nm": "rimraf node_modules",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "stylelint": "stylelint 'src/**/*.scss' --config ./.stylelintrc.json --syntax scss --fix",
    "deploy": "npm publish",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.11.2",
    "@types/node": "^12.0.0",
    "tslint": "^5.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@storybook/addon-actions": "^6.4.1",
    "@storybook/addon-essentials": "^6.4.1",
    "@storybook/addon-links": "^6.4.1",
    "@storybook/builder-webpack5": "^6.4.1",
    "@storybook/cli": "^6.4.1",
    "@storybook/manager-webpack5": "^6.4.1",
    "@storybook/react": "^6.4.1",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.3.0",
    "react-scripts": "^5.0.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^1.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.3.0"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wso2-enterprise/ballerina-low-code-editor.git"
  },
  "author": "wso2",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
