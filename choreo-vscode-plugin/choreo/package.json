{
  "name": "ballerina",
  "displayName": "WSO2 Choreo",
  "description": "WSO2 Choreo VSCode Extension",
  "version": "1.0.0",
  "publisher": "wso2",
  "repository": {
    "type": "git",
    "url": "https://github.com/wso2/ballerina-plugin-vscode"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:wso2.choreo.sign.in"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wso2.choreo.sign.in",
        "title": "Sign In",
        "category": "Choreo"
      },
      {
        "command": "wso2.choreo.sign.out",
        "title": "Sign Out",
        "category": "Choreo"
      },
      {
        "command": "wso2.choreo.org.setAsSelected",
        "title": "Set As Seleted"
      },
      {
        "command": "wso2.choreo.component.clone",
        "title": "Clone"
      },
      {
        "command": "wso2.choreo.project.clone",
        "title": "Clone to workspace"
      },
      {
        "command": "wso2.choreo.projects.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wso2-choreo",
          "title": "WSO2 Choreo",
          "icon": "resources/icons/choreo.svg"
        }
      ]
    },
    "views": {
      "wso2-choreo": [
        {
          "id": "choreo-projects",
          "name": "Projects"
        },
        {
          "id": "choreo-account",
          "name": "Account"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "choreo-projects",
        "contents": "Sign in to retrieve projects.\n[Sign In](command:wso2.choreo.sign.in)",
        "when": "choreoLoginStatus == LoggedOut"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "wso2.choreo.projects.refresh",
          "when": "view == choreo-projects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "wso2.choreo.org.setAsSelected",
          "when": "view == choreo-account && viewItem == choreo.org"
        },
        {
          "command": "wso2.choreo.component.clone",
          "when": "view == choreo-projects && viewItem == choreo.component"
        },
        {
          "command": "wso2.choreo.project.clone",
          "when": "view == choreo-projects && viewItem == choreo.project"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "vsce": "^2.14.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^1.2.0",
    "gql-query-builder": "^3.8.0",
    "graphql-request": "^5.0.0",
    "jwt-decode": "^3.1.2",
    "keytar": "^7.9.0",
    "pkce-challenge": "^3.0.0"
  }
}
