{
    "name": "@wso2-enterprise/record-creator",
    "version": "1.0.0",
    "description": "Record Creator for Ballerina",
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "watch": "tsc --pretty --watch",
        "build": "tsc --pretty && pnpm run copy:assets",
        "copy:assets": "copyfiles -u 1 \"src/**/*.scss\" \"src/**/*.svg\"  \"src/**/*.css\" \"src/**/*.png\" \"src/**/*.txt\" \"src/**/*.json\" \"src/assets/fonts/Gilmer/*.*\" lib/",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "dependecies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^16.18.79",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "react-scripts-ts": "3.1.0",
        "typescript": "^4.9.5",
        "copyfiles": "~2.4.1",
        "eslint": "~8.56.0"
    },
    "author": "wso2",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wso2-enterprise/ballerina-plugin-vscode.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "dependencies": {
      "@wso2-enterprise/syntax-tree": "workspace:*",
      "@wso2-enterprise/ballerina-rpc-client": "workspace:*",
      "@wso2-enterprise/ballerina-core": "workspace:*",
      "@wso2-enterprise/ballerina-statement-editor": "workspace:*",
      "@emotion/react": "~11.11.3",
      "@emotion/styled": "~11.11.0",
      "@tanstack/react-query": "~5.20.1",
      "@emotion/css": "~11.11.2",
      "react-intl": "~6.6.2",
      "@wso2-enterprise/ui-toolkit": "workspace:*",
      "@wso2-enterprise/ballerina-languageclient": "workspace:*",
      "lodash.debounce": "~4.0.8",
      "@types/lodash.debounce": "~4.0.9",
      "react-lottie": "~1.2.4",
      "@types/react-lottie": "~1.2.10",
      "vscode-uri": "~3.0.8"
    }
}
