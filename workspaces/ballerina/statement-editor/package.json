{
    "name": "@wso2-enterprise/ballerina-statement-editor",
    "version": "3.4.2",
    "description": "Ballerina Statement Editor",
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "typings": "lib/index",
    "scripts": {
        "prebuild": "pnpm run lint",
        "build": "pnpm run lint && tsc --pretty && pnpm run copy:assets",
        "copy:assets": "copyfiles -u 1 src/**/*.scss src/**/*.svg src/**/*.css src/**/*.png src/**/*.txt src/**/*.json build/",
        "watch": "tsc --pretty --watch",
        "clean": "rimraf build/",
        "clean:nm": "rimraf node_modules",
        "lint": "tslint --project .",
        "lint:fix": "tslint --fix --project .",
        "storybook": "node tools/setup-storybook.js",
        "setGITOut": "if [ $CI = 'true' ]; then echo \"built-$(basename \"$PWD\")=true\" >> $GITHUB_OUTPUT; fi"
    },
    "dependencies": {
        "@wso2-enterprise/syntax-tree": "workspace:*",
        "@wso2-enterprise/ballerina-core": "workspace:*",
        "@wso2-enterprise/ballerina-rpc-client": "workspace:*",
        "@wso2-enterprise/ui-toolkit": "workspace:*",
        "@vscode/webview-ui-toolkit": "^1.2.0",
        "@emotion/styled": "^11.10.5",
        "@emotion/react": "^11.9.3",
        "classnames": "^2.2.6",
        "lodash.debounce": "^4.0.8",
        "@emotion/css": "~11.11.2",
        "@tanstack/react-query": "4.0.10",
        "@tanstack/query-core": "^4.0.0-beta.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.10.19",
        "react-lottie": "^1.2.3",
        "vscode-languageserver-protocol": "^3.16.0",
        "react-icons": "^4.4.0",
        "vscode-uri": "^3.0.8",
        "vscode-languageserver-types": "^3.17.5"
    },
    "devDependencies": {
        "@storybook/react": "^6.5.9",
        "@types/classnames": "^2.2.9",
        "@types/lodash.camelcase": "^4.3.0",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/lodash.debounce": "^4.0.6",
        "@types/react": "^17.0.37",
        "@types/react-dom": "17.0.14",
        "@types/react-lottie": "^1.2.5",
        "copyfiles": "^2.4.1",
        "storybook": "^6.3.7",
        "tslib": "^2.1.0",
        "tslint": "^6.1.3",
        "tslint-react": "^4.2.0",
        "tslint-react-hooks": "^2.2.2",
        "typescript": "^4.9.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wso2-enterprise/ballerina-plugin-vscode.git"
    },
    "author": "wso2",
    "license": "UNLICENSED",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    }
}
