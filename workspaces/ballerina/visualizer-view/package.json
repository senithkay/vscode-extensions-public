{
  "name": "@wso2-enterprise/visualizer-view",
  "version": "1.0.0",
  "description": "Ballerina Extension Visualizer Webview",
  "files": [
    "lib"
  ],
  "main": "lib/DesignDiagram.js",
  "types": "lib/DesignDiagram.d.ts",
  "scripts": {
    "start": "webpack-dev-server --progress --mode=development",
    "build": "tsc --pretty && npm run copy:assets && webpack && pnpm run postbuild",
    "copy:assets": "copyfiles -u 1 \"src/**/*.svg\"  \"src/**/*.css\" \"src/resources/assets/font/*.*\" lib/",
    "deploy": "npm publish",
    "postbuild": "copyfiles -u 1 -V build/*.js build/fonts/* build/images/* -e build/*.txt ../ballerina-extension/resources/jslibs"
  },
  "keywords": [],
  "dependencies": {
    "@types/vscode-webview": "^1.57.4",
    "@wso2-enterprise/ballerina-core": "workspace:*",
    "@wso2-enterprise/ballerina-rpc-client": "workspace:*",
    "@wso2-enterprise/ui-toolkit": "workspace:*",
    "@wso2-enterprise/overview-view": "workspace:*",
    "@wso2-enterprise/service-designer-view": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vscode-messenger-common": "^0.4.5",
    "vscode-messenger-webview": "^0.4.5"
  },
  "devDependencies": {
    "@types/node": "^18.18.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.2.7",
    "source-map-loader": "^4.0.1",
    "style-loader": "^1.3.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.1"
  },
  "author": "wso2",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wso2-enterprise/ballerina-plugin-vscode.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
