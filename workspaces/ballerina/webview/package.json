{
  "name": "@wso2-enterprise/webview",
  "version": "1.0.0",
  "description": "Ballerina Extension Webview",
  "files": [
    "lib"
  ],
  "main": "lib/DesignDiagram.js",
  "types": "lib/DesignDiagram.d.ts",
  "scripts": {
    "start": "webpack-dev-server --progress --mode=development",
    "build": "tsc --pretty && npm run copy:assets && webpack && pnpm run postbuild",
    "copy:assets": "copyfiles -u 1 \"src/**/*.svg\"  \"src/**/*.css\" \"src/resources/assets/font/*.*\" lib/",
    "deploy": "npm publish",
    "postbuild": "copyfiles -u 1 -V build/*.js build/fonts/* build/images/* -e build/*.txt ../ballerina-extension/resources/jslibs"
  },
  "keywords": [],
  "dependencies": {
    "@types/vscode-webview": "^1.57.0",
    "@wso2-enterprise/project-design-diagrams": "workspace:*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.9.4",
    "vscode-messenger-common": "^0.4.3",
    "vscode-messenger-webview": "^0.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@types/node": "^18.13.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "17.0.14",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.1",
    "paths-js": "^0.4.11",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "author": "wso2",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wso2-enterprise/ballerina-plugin-vscode.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
