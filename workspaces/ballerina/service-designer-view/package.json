    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.10.5",
    "monaco-editor": "0.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vscode-messenger-common": "^0.4.5",
