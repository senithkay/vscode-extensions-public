{
  "compilerOptions": {
    "module": "node16",
    "target": "es6",
    "outDir": "./lib",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declarationDir": "lib",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.d.ts",
    "babel.config.js"
  ]
}
