{
  "name": "test-gpt",
  "displayName": "WSO2 APIChat",
  "description": "Test APIs with OpenAPI descriptions",
  "version": "0.9.2",
  "publisher": "WSO2",
  "icon": "resources/images/testgpt.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Machine Learning",
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test-gpt.console",
        "title": "Open Test Console",
        "category": "TestGPT",
        "when": "editorLangId == yaml && isFileOpenAPI",
        "icon": "$(beaker)"
      },
      {
        "command": "test-gpt.clear",
        "title": "Clear",
        "category": "TestGPT",
        "icon": "$(clear-all)"
      },
      {
        "command": "test-gpt.refresh",
        "title": "Refresh ",
        "category": "TestGPT",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == yaml && isFileOpenAPI",
          "command": "test-gpt.console",
          "alt": "test-gpt.console",
          "group": "navigation"
        },
        {
          "when": "activeWebviewPanelId == testgpt-console",
          "command": "test-gpt.clear",
          "alt": "test-gpt.clear",
          "group": "navigation@1"
        },
        {
          "command": "test-gpt.refresh",
          "when": "activeWebviewPanelId == testgpt-console",
          "alt": "test-gpt.refresh",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "clean": "del-cli ./dist ./out ./resources/jslibs ./choreo-*.vsix ./coverage ./.nyc_output",
    "vscode:prepublish": "pnpm run compile",
    "compile": "webpack --mode production",
    "copy-webview-lib": "mkdir -p ./resources/jslibs && copyfiles -f ../webviews/build/*.js ./resources/jslibs",
    "copy-codicons": "copyfiles -f ./node_modules/@vscode/codicons/dist/* ./resources/codicons",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "unit-test": "tsc && mocha --ui tdd   out/test/unit/*.test.js ",
    "build": "pnpm run compile && pnpm run copy-codicons && pnpm run copy-webview-lib && pnpm run package && pnpm run postbuild",
    "package": "pnpm vsce package --no-dependencies --pre-release --baseImagesUrl https://github.com/wso2/choreo-vscode/raw/HEAD/",
    "copyVSIX": "copyfiles *.vsix ./vsix",
    "copyVSIXToRoot": "copyfiles -f ./vsix/* ../../..",
    "postbuild": "pnpm run copyVSIX"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "~20.8.2",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.49.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "mocha-steps": "^1.3.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "axios": "^1.5.0",
    "dotenv": "~16.3.1",
    "ts-loader": "~9.4.4",
    "vscode-messenger": "^0.4.5",
    "vscode-messenger-common": "^0.4.5",
    "webpack": "~5.88.2",
    "xstate": "^4.38.2",
    "yaml": "^2.3.2",
    "dotenv-webpack": "~8.0.1"
  }
}
