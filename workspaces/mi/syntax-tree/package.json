{
  "name": "@wso2-enterprise/mi-syntax-tree",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prebuild": "pnpm run lint",
    "build": "pnpm run clean && tsc --pretty",
    "watch": "tsc --pretty --watch",
    "clean": "rimraf build/ && rimraf lib/",
    "clean:nm": "rimraf node_modules",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "generateMappings": "java -jar ./node_modules/jsonix/lib/jsonix-schema-compiler-full.jar -d mappings -p PO synapse-schemas/mediators/core/log.xsd",
    "generateST": "node ./lib/generator/generator.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Sajinie",
  "module": "dist/syntax-tree.esm.js",
  "size-limit": [
    {
      "path": "dist/syntax-tree.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/syntax-tree.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "husky": "^8.0.3",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "tslint": "~6.1.3",
    "@types/node": "~20.6.3",
    "jsonix": "~3.0.0"
  }
}
