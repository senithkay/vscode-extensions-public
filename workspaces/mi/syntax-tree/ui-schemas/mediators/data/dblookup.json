                  [
                    "AND",
                    {
                      "connectionType": "DATA_SOURCE"
                    },
                    {
                      "connectionDSType": "EXTERNAL"
                    }
                  ]
                ]
              ],
              "required": true,
              "helpTip": "Enter the registry based user config key"
            }
          },
          {
