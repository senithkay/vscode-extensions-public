                [
                  "OR",
                  {
                    "connectionType": "DB_CONNECTION"
                  },
                  [
                    "AND",
                    {
                      "connectionType": "DATA_SOURCE"
                    },
                    {
                      "connectionDSType": "EXTERNAL"
                    }
                  ]
                ]
              ],
              "required": true,
              "helpTip": "Enter the connection username"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "registryBasedUserConfigKey",
              "displayName": "Registry Based User Config Key",
              "inputType": "registry",
