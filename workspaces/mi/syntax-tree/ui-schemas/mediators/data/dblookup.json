                "OR",
                {
                  "connectionType": "DB_CONNECTION"
                },
                [
                  "AND",
                  {
                    "connectionType": "DATA_SOURCE"
                  },
                  {
                    "connectionDSType": "EXTERNAL"
                  }
                ]
              ],
              "required": false,
              "helpTip": "Specify if the URL config is registry-based"
