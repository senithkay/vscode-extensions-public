          {
            "type": "attribute",
            "value": {
              "name": "connectionDSType",
              "displayName": "Connection DS Type",
              "inputType": "combo",
              "defaultValue": "EXTERNAL",
              "comboValues": [
                "EXTERNAL",
                "CARBON"
