                    "required": true,
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "valueLiteral",
                    "displayName": "Value Literal",
                    "inputType": "string",
                    "enableCondition": [
                      {
                        "valueType": "LITERAL"
                      }
                    ],
                    "required": true,
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "valueExpression",
                    "displayName": "Value Expression",
                    "inputType": "expression",
                    "enableCondition": [
                      {
                        "valueType": "EXPRESSION"
                      }
                    ],
                    "required": true,
                    "helpTip": ""
                  }
                }
              ],
              "enableCondition": [
                {
                  "action": "SET_PROPERTY"
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
