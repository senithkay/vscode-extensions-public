              "comboValues": [
                "CREATE",
                "REMOVE",
                "SET_PROPERTY",
                "GET_PROPERTY"
              ],
              "required": true,
              "helpTip": ""
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "class",
              "displayName": "Class",
              "inputType": "string",
