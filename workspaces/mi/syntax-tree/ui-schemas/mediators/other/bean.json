                {
                  "action": "CREATE"
                }
              ],
              "required": true,
              "helpTip": ""
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "var",
              "displayName": "Var",
              "inputType": "string",
              "required": false,
              "helpTip": ""
