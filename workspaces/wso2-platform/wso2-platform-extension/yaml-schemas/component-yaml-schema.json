{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Configuration",
  "type": "object",
  "required": ["schemaVersion"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "enum": [1.2,1.1,1.0],
      "description": "The configuration file schema version"
    },
    "endpoints": {
      "type": "array",
      "description": "Incoming connection details for the component (optional)",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique name for the endpoint"
          },
          "displayName": {
            "type": "string",
            "description": "Display name for the endpoint"
          },
          "service": {
            "type": "object",
            "required": ["port"],
            "properties": {
              "basePath": {
                "type": "string",
                "pattern": "^/.*",
                "description": "Base path of the API exposed via the endpoint. Must start with '/'. Required in REST, GraphQL, WS"
              },
              "port": {
                "type": "number",
                "description": "Numeric port value"
              }
            }
          },
          "type": {
            "type": "string",
            "description": "Type of traffic that the endpoint is accepting",
            "enum": ["REST", "GraphQL", "GRPC", "TCP", "UDP", "WS"]
          },
          "networkVisibilities": {
            "type": "array",
            "description": "Network level visibilities of the endpoint",
            "items": {
              "type": "string",
              "enum": ["Project", "Organization", "Public"]
            }
          },
          "schemaFilePath": {
            "type": "string",
            "description": "Path to the schema definition file, applicable for REST/WS endpoints"
          }
        },
        "if": {
          "properties": {
            "type": { "const": "REST" }
          }
        },
        "then": {
          "properties": {
            "schemaFilePath": {
              "type": "string",
              "description": "Schema file path required for REST endpoints"
            }
          },
          "required": ["schemaFilePath"]
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Outgoing connection details for the component (optional)",
      "oneOf": [
        {
          "if": {
            "properties": {
              "schemaVersion": { "const": 1.0 }
            }
          },
          "then": {
            "properties": {
              "serviceReferences": {
                "type": "array",
                "description": "Defines the service references for version 1.0 (Deprecated in future versions)",
                "deprecated": true,
                "items": {
                  "type": "object",
                  "required": ["name", "connectionConfig"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the service reference (v1.0)"
                    },
                    "connectionConfig": {
                      "type": "string",
                      "description": "Connection instance config (v1.0)"
                    },
                    "env": {
                      "type": "array",
                      "description": "Environment variables for connection configuration",
                      "items": {
                        "type": "object",
                        "required": ["from", "to"],
                        "properties": {
                          "from": {
                            "type": "string",
                            "description": "Key name of the connection configuration"
                          },
                          "to": {
                            "type": "string",
                            "description": "Environment variable injected into the container"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "required": ["serviceReferences"]
          }
        },
        {
          "if": {
            "properties": {
              "schemaVersion": { "enum": [1.1, 1.2] }
            }
          },
          "then": {
            "properties": {
              "connectionReferences": {
                "type": "array",
                "description": "Defines the connection references for versions 1.1 and 1.2",
                "items": {
                  "type": "object",
                  "required": ["name", "resourceRef"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the connection reference (v1.1/v1.2)"
                    },
                    "resourceRef": {
                      "type": "string",
                      "description": "Resource reference (v1.1/v1.2)"
                    }
                  }
                }
              }
            },
            "required": ["connectionReferences"]
          }
        }
      ]
    },
    "proxy": {
      "type": "object",
      "description": "Proxy configurations of the component (optional)",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of traffic the proxy is handling",
          "enum": ["REST", "GraphQL", "WS"]
        },
        "networkVisibilities": {
          "type": "array",
          "description": "Network visibilities for the proxy",
          "items": {
            "type": "string",
            "enum": ["Organization", "Public"]
          }
        },
        "schemaFilePath": {
          "type": "string",
          "description": "Path to the schema definition file (REST only)"
        },
        "thumbnailPath": {
          "type": "string",
          "description": "Path to the thumbnail image"
        },
        "docPath": {
          "type": "string",
          "description": "Path to the documentation files"
        }
      },
      "if": {
        "properties": {
          "type": { "const": "REST" }
        }
      },
      "then": {
        "properties": {
          "schemaFilePath": {
            "type": "string",
            "description": "Schema file path required for REST proxy configurations"
          }
        },
        "required": ["schemaFilePath"]
      }
    },
    "configurations": {
      "type": "object",
      "description": "Runtime configurations (optional, applicable in version 1.2)",
      "properties": {
        "env": {
          "type": "array",
          "description": "List of environment variables to be injected into the component",
          "items": {
            "type": "object",
            "required": ["name", "valueFrom"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the environment variable"
              },
              "valueFrom": {
                "type": "object",
                "description": "Value source for the environment variable"
              }
            }
          }
        },
        "file": {
          "type": "array",
          "description": "List of files to be injected into the component from config form",
          "items": {
            "type": "object",
            "required": ["name", "mountPath", "type", "values"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the file"
              },
              "mountPath": {
                "type": "string",
                "description": "Path to mount the file at"
              },
              "type": {
                "type": "string",
                "description": "File type",
                "enum": ["yaml", "json", "toml"]
              },
              "values": {
                "type": "array",
                "description": "Keys of the file",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["name", "valueFrom"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Key name"
                    },
                    "valueFrom": {
                      "type": "object",
                      "description": "Value source for the key"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "schemaVersion": { "const": 1.2 }
        }
      },
      "then": {
        "properties": {
          "configurations": {
            "description": "Configurations are optional and applicable only in version 1.2"
          }
        }
      }
    }
  ]
}

