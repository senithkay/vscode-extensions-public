{
  "name": "choreo",
  "displayName": "WSO2 Choreo",
  "description": "WSO2 Choreo VSCode Extension",
  "version": "1.0.0",
  "publisher": "wso2",
  "repository": {
    "type": "git",
    "url": "https://github.com/wso2/ballerina-plugin-vscode"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:wso2.choreo.sign.in",
    "onView:choreo-projects",
    "onView:choreo-account",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wso2.choreo.sign.in",
        "title": "Sign In",
        "category": "Choreo"
      },
      {
        "command": "wso2.choreo.sign.out",
        "title": "Sign Out",
        "category": "Choreo"
      },
      {
        "command": "wso2.choreo.org.setAsSelected",
        "title": "Set As Seleted"
      },
      {
        "command": "wso2.choreo.component.clone",
        "title": "Clone"
      },
      {
        "command": "wso2.choreo.project.clone",
        "title": "Clone to new Workspace"
      },
      {
        "command": "wso2.choreo.projects.registry.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "wso2.choreo.projects.tree.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "wso2.choreo.project.create",
        "title": "Create New Project",
        "category": "Choreo",
        "icon": "$(add)"
      },
      {
        "command": "wso2.choreo.component.create",
        "title": "Create New Component",
        "category": "Choreo",
        "icon": "$(add)"
      },
      {
        "command": "wso2.choreo.project.overview",
        "title": "Project Overview",
        "category": "Choreo"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wso2-choreo",
          "title": "WSO2 Choreo",
          "icon": "resources/icons/choreo.svg"
        }
      ]
    },
    "views": {
      "wso2-choreo": [
        {
          "id": "choreo-projects",
          "name": "Projects"
        },
        {
          "id": "choreo-account",
          "name": "Account"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "choreo-projects",
        "contents": "Sign in to retrieve projects.\n[Sign In](command:wso2.choreo.sign.in)",
        "when": "choreoLoginStatus == LoggedOut"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "wso2.choreo.project.create",
          "when": "view == choreo-projects",
          "group": "navigation"
        },
        {
          "command": "wso2.choreo.projects.tree.refresh",
          "when": "view == choreo-projects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "wso2.choreo.org.setAsSelected",
          "when": "view == choreo-account && viewItem == choreo.org"
        }
      ]
    }
  },
  "scripts": {
    "clean": "del-cli ./dist ./out ./resources/jslibs ./choreo-*.vsix ./coverage ./.nyc_output",
    "compile": "webpack --mode production",
    "watch": "npx webpack --watch",
    "build": "npm run clean && npm run compile && npm run lint && npm run copy-webview-lib && npx vsce package --no-dependencies",
    "copy-webview-lib": "copyfiles -f -E -F ./../../node_modules/@wso2-enterprise/choreo-vscode-webviews/build/static/js/main.js ./resources/jslibs",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "npm run clean && npm run compile-tests && npm run lint && npm run copy-webview-lib",
    "lint": "eslint src --ext ts",
    "test-nyc-cli": "nyc --reporter=html node ./dist/test/runTest.js",
    "test": "node ./dist/test/runTest.js && nyc report && nyc report --reporter=html"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.16.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yarn": "^1.22.19"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.0",
    "@wso2-enterprise/choreo-client": "^1.0.0",
    "@wso2-enterprise/choreo-core": "^1.0.0",
    "@wso2-enterprise/choreo-vscode-webviews": "1.0.0",
    "gql-query-builder": "^3.8.0",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "jwt-decode": "^3.1.2",
    "simple-git": "^3.15.1",
    "vscode-messenger": "^0.4.3"
  }
}
