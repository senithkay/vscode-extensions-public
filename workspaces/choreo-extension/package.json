{
  "name": "choreo",
  "displayName": "WSO2 Choreo",
  "description": "WSO2 Choreo VSCode Extension",
  "version": "1.0.0",
  "publisher": "wso2",
  "repository": {
    "type": "git",
    "url": "https://github.com/wso2/ballerina-plugin-vscode"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:wso2.choreo.sign.in",
    "onView:choreo-projects",
    "onView:choreo-account"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "wso2.ballerina"
  ],
  "contributes": {
    "commands": [
      {
        "command": "wso2.choreo.sign.in",
        "title": "Sign In",
        "category": "Choreo"
      },
      {
        "command": "wso2.choreo.sign.out",
        "title": "Sign Out",
        "category": "Choreo"
      },
      {
        "command": "wso2.choreo.org.setAsSelected",
        "title": "Set As Seleted"
      },
      {
        "command": "wso2.choreo.component.clone",
        "title": "Clone"
      },
      {
        "command": "wso2.choreo.project.clone",
        "title": "Clone to new Workspace"
      },
      {
        "command": "wso2.choreo.project.create",
        "title": "Create new Project",
        "category": "Choreo",
        "icon": "$(add)"
      },
      {
        "command": "wso2.choreo.projects.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wso2-choreo",
          "title": "WSO2 Choreo",
          "icon": "resources/icons/choreo.svg"
        }
      ]
    },
    "views": {
      "wso2-choreo": [
        {
          "id": "choreo-projects",
          "name": "Projects"
        },
        {
          "id": "choreo-account",
          "name": "Account"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "choreo-projects",
        "contents": "Sign in to retrieve projects.\n[Sign In](command:wso2.choreo.sign.in)",
        "when": "choreoLoginStatus == LoggedOut"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "wso2.choreo.project.create",
          "when": "view == choreo-projects",
          "group": "navigation"
        },
        {
          "command": "wso2.choreo.projects.refresh",
          "when": "view == choreo-projects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "wso2.choreo.org.setAsSelected",
          "when": "view == choreo-account && viewItem == choreo.org"
        },
        {
          "command": "wso2.choreo.component.clone",
          "when": "view == choreo-projects && viewItem == choreo.component"
        },
        {
          "command": "wso2.choreo.project.clone",
          "when": "view == choreo-projects && viewItem == choreo.project"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack",
    "watch": "npx webpack --watch",
    "build": "npm run compile && npx copy-files-from-to && npx vsce package --no-dependencies ",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "copyFiles": [
    {
      "from": "../../node_modules/@wso2-enterprise/choreo-vscode-webviews/build/static/js/main.js",
      "to": "resources/jslibs/choreo-vscode-webviews.js"
    }
  ],
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.16.0",
    "copy-files-from-to": "^3.6.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yarn": "^1.22.19"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.0",
    "@wso2-enterprise/choreo-client": "^1.0.0",
    "@wso2-enterprise/choreo-core": "^1.0.0",
    "@wso2-enterprise/choreo-vscode-webviews": "1.0.0",
    "axios": "^1.2.0",
    "gql-query-builder": "^3.8.0",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "jwt-decode": "^3.1.2",
    "keytar": "^7.9.0",
    "pkce-challenge": "^3.0.0",
    "simple-git": "^3.15.1",
    "vscode-messenger": "^0.4.3"
  }
}
