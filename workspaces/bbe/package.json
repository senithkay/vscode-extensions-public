{
  "name": "@ballerina/ballerina-by-examples",
  "version": "3.3.9",
  "description": "Provides components for displaying Ballerina By Examples",
  "main": "build/BBEViewer",
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "clean": "rimraf lib && rimraf coverage && rimraf build",
    "lint": "tslint -t stylish --project .",
    "build": "pnpm run build:theme && webpack --mode=production && pnpm run postbuild",
    "build:theme": "node theme/scripts/build-theme.js",
    "test": "jest --colors",
    "coverage": "jest --coverage",
    "watch": "tsc --pretty --watch",
    "watch:webpack": "webpack-dev-server --mode=development --progress",
    "watch:test": "jest --watch",
    "storybook": "npx start-storybook -p 9001 -c .storybook",
    "postbuild": "copyfiles -f build/*.js ../ballerina-extension/resources/jslibs && copyfiles -f build/themes/*.min.css ../ballerina-extension/resources/jslibs/themes"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-less": "^2.4.1",
    "semantic-ui-react": "^2.0.0",
    "fs-extra": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-storyshots": "^4.0.7",
    "@storybook/react": "^6.5.9",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^29.2.5",
    "@types/lodash": "^4.14.189",
    "@types/node": "^18.11.19",
    "@types/react": "^17.0.37",
    "@types/react-dom": "17.0.14",
    "@types/react-test-renderer": "^17.0.1",
    "@types/rimraf": "^2.0.2",
    "@types/storybook__addon-storyshots": "^3.4.3",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.5",
    "clean-css": "^4.2.1",
    "copy-webpack-plugin": "^9.0.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.2.7",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fast-xml-parser": "^3.12.7",
    "glob": "^7.2.0",
    "jest": "^29.4.2",
    "jest-config": "^24.5.0",
    "less": "^3.9.0",
    "less-loader": "^4.0.5",
    "less-plugin-inline-urls": "^1.2.0",
    "less-plugin-npm-import": "^2.1.0",
    "less-plugin-rewrite-import": "^0.1.1",
    "less-vars-to-js": "^1.3.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "sass-loader": "^12.1.0",
    "source-map-loader": "^4.0.1",
    "style-loader": "^1.3.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.4.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^1.1.2",
    "watch": "^1.0.2",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "author": "ballerina.io",
  "license": "Apache-2.0"
}
