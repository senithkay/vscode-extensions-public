{
    "compilerOptions": {
      "module": "node16",
      "target": "es6",
      "outDir": "out",
      "lib": [
          "es6"
      ],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "noUnusedLocals": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "declaration": true,
      "skipLibCheck": true
    },
    "include": [
      "src"
    ]
}
