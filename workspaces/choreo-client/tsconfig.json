{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es2022"],                     
    "allowJs": true,
    "outDir": "./lib",                          
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,         
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
      "node_modules",
      "lib",
      "**/*.d.ts",
      "babel.config.js"
  ]
}