{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "target": "ES6",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/index.tsx",
    "src/SimpleDiagram.tsx",
    "src/Diagram.tsx",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
