{
  "name": "@wso2-enterprise/eggplant-core",
  "version": "1.0.0",
  "description": "Contains types related to the Eggplant extension",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "pnpm run lint && tsc --pretty && npm run copy:assets",
    "copy:assets": "copyfiles -u 1 \"src/**/*.scss\" \"src/**/*.svg\"  \"src/**/*.css\" \"src/**/*.png\" \"src/**/*.txt\" \"src/**/*.json\" \"src/resources/assets/fonts/*.*\" lib/",
    "watch": "tsc --pretty --watch",
    "clean": "rimraf lib/",
    "clean:nm": "rimraf node_modules",
    "lint": "eslint --ext .",
    "lint:fix": "eslint --fix --ext ."
  },
  "dependencies": {
    "vscode-languageserver-types": "^3.17.5",
    "vscode-messenger-common": "^0.4.5"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react": "^4.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "author": "WSO2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wso2-enterprise/ballerina-plugin-vscode.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
