{
  "name": "@wso2-enterprise/eggplant-rpc-client",
  "version": "1.0.0",
  "description": "Eggplant RPC Client",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "pnpm run lint && tsc --pretty && npm run copy:assets",
    "copy:assets": "copyfiles -u 1 \"src/**/*.scss\" \"src/**/*.svg\"  \"src/**/*.css\" \"src/**/*.png\" \"src/**/*.txt\" \"src/**/*.json\" \"src/resources/assets/fonts/*.*\" lib/",
    "watch": "tsc --pretty --watch",
    "clean": "rimraf lib/",
    "clean:nm": "rimraf node_modules",
    "lint": "eslint --ext .",
    "lint:fix": "eslint --fix --ext ."
  },
  "dependencies": {
    "@types/vscode-webview": "^1.57.3",
    "@wso2-enterprise/eggplant-core": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vscode-messenger-common": "^0.4.5",
    "vscode-messenger-webview": "^0.4.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.2.2"
  },
  "author": "wso2",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wso2-enterprise/ballerina-plugin-vscode.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
