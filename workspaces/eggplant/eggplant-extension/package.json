{
    "name": "eggplant-extension",
    "displayName": "Eggplant",
    "description": "",
    "version": "0.0.1",
    "repository": {
        "url": "http://repo.url"
    },
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/Ballerina.toml"
    ],
    "main": "./out/extension",
    "extensionDependencies": [ "WSO2.ballerina" ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "eggplant",
                    "title": "Eggplant",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "Eggplant.project-explorer",
                "contents": "Welcome to Eggplant. You can open a folder containing a Eggplant project or create a new project.\n[Open Eggplant Project](command:vscode.openFolder)\n[Create New Project](command:ballerina.open.eggplant.welcome)\nTo learn more about how to use Eggplant in VS Code [read our docs](https://ei.docs.wso2.com)."
              }
        ],
        "views": {
            "eggplant": [
                {
                    "id": "Eggplant.project-explorer",
                    "name": "Overview"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "Eggplant.project-explorer.add-connection",
                    "when": "view == Eggplant.project-explorer && viewItem == connections",
                    "group": "inline"
                },
                {
                    "command": "Eggplant.project-explorer.add-entry-point",
                    "when": "view == Eggplant.project-explorer && viewItem == entryPoint",
                    "group": "inline"
                }
            ]
        },
        "commands": [
            {
                "command": "ballerina.open.eggplant.welcome",
                "title": "Open Welcome",
                "category": "Eggplant"
            },
            {
                "command": "Eggplant.project-explorer.add-connection",
                "title": "Add Connection",
                "icon": "$(add)",
                "group": "navigation",
                "category": "Eggplant"
            },
            {
                "command": "Eggplant.project-explorer.add-entry-point",
                "title": "Add Entry Point",
                "icon": "$(add)",
                "group": "navigation",
                "category": "Eggplant"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "webpack --mode production --stats-error-details",
        "watch-eggplant": "webpack --mode none --watch",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "build": "pnpm run compile && pnpm run lint && pnpm run postbuild",
        "package": "if [ $isPreRelease = true ]; then vsce package --no-dependencies --pre-release --baseImagesUrl https://github.com/wso2/ballerina-plugin-vscode/raw/HEAD/; else vsce package --no-dependencies --baseImagesUrl https://github.com/wso2/ballerina-plugin-vscode/raw/HEAD/; fi",
        "copyFonts": "copyfiles -f ./node_modules/@wso2-enterprise/font-wso2-vscode/dist/* ./resources/font-wso2-vscode/dist/",
        "rebuild": "pnpm run clean && pnpm run compile && pnpm run postbuild",
        "postbuild": "pnpm run copyFonts && pnpm run package && pnpm run copyVSIX",
        "copyVSIX": "copyfiles *.vsix ./vsix",
        "copyVSIXToRoot": "copyfiles -f ./vsix/* ../../.."
    },
    "dependencies": {
        "@wso2-enterprise/ballerina-core": "workspace:*",
        "@wso2-enterprise/font-wso2-vscode": "workspace:*",
        "xstate": "^4.38.3"
    },
    "devDependencies": {
        "@vscode/vsce": "^2.22.0",
        "@types/vscode": "^1.84.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "copyfiles": "^2.4.1",
        "copy-webpack-plugin": "^11.0.0",
        "source-map-support": "^0.5.21",
        "ts-loader": "^9.4.1",
        "webpack": "^5.56.0",
        "webpack-cli": "^4.10.0",
        "webpack-permissions-plugin": "^1.0.9"
    }
}
