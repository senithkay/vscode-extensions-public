{
    "name": "eggplant-extension",
    "displayName": "eggplant",
    "description": "",
    "version": "0.0.1",
    "repository": {
        "url": "http://repo.url"
    },
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/Ballerina.toml"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "eggplant",
                    "title": "Eggplant",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "lowcode",
                    "name": "Low Code Editor",
                    "when": "true"
                }
            ],
            "eggplant": [
                {
                    "type": "webview",
                    "id": "eggplant.activity.overview",
                    "name": "Overview"
                }
            ]
        },
        "defaultViewContainer": "activitybar:eggplant",
        "commands": [
            {
                "command": "eggplant.openLowCode",
                "title": "Open Low Code"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "watch-eggplant": "webpack --mode none --watch",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "build": "pnpm run compile && pnpm run lint"
    },
    "dependencies": {
        "@wso2-enterprise/syntax-tree": "workspace:*",
        "@wso2-enterprise/ballerina-core": "workspace:*",
        "@wso2-enterprise/eggplant-webview": "workspace:*",
        "@wso2-enterprise/eggplant-core": "workspace:*",
        "vscode-messenger": "^0.4.5",
        "xstate": "^4.38.3"
    },
    "devDependencies": {
        "@vscode/vsce": "^2.22.0",
        "@types/vscode": "^1.84.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "@wso2-enterprise/eggplant-webview": "workspace:*",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "copyfiles": "^2.4.1",
        "copy-webpack-plugin": "^11.0.0",
        "source-map-support": "^0.5.21",
        "ts-loader": "^9.4.1",
        "webpack": "^5.56.0",
        "webpack-cli": "^4.10.0",
        "webpack-permissions-plugin": "^1.0.9"
    }
}